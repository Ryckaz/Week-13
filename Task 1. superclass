import math

class Shapes():


    class Circle():
        def __init__(self,radius):
            self.radius = radius

        def area(self):
            return self.radius ** 2 * math.pi


    class Rectangle():
        def __init__(self, longSide, shortSide):
            self.longSide = longSide
            self.shortSide = shortSide

        def area(self):
            return self.longSide * self.shortSide


    class Square():
        def __init__(self, side):
            self.side = side

        def area (self):
            return self.side ** 2

    class Ellipse():
        def __init__ (self,aAxis, bAxis):
            self.aAxis = aAxis
            self.bAxis = bAxis

        def area(self):
            return self.aAxis * self.bAxis * math.pi


testCirc1 = Shapes.Circle(1)
if (testCirc1.area() != 3.14):
    print("Wrong area! Area should be 3.14 but is", testCirc1.area())
else:
    print("area function test passed")

circ1 = Shapes.Circle(1)
print("Circle 1 radius: ", circ1.radius)
print("Circle 1 area: ", circ1.area())


r1 = Shapes.Rectangle(5,6)
print("Rectangle are is: ", r1.area())

Sqr1 = Shapes.Square(5)
print("Square area is: ", Sqr1.area())

ellips1 = Shapes.Ellipse(1,1)
print("Ellipse area is: ", ellips1.area())






        
    
